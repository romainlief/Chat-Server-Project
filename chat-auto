#!/bin/bash

main() {
    
    # Initialisation des valeurs
    utilisateur="$1"
    destinataire="" #demander avant de lancer chat
    input=""
    current_dir=$(dirname "$0")
    
    # Boucles de lecture
    {
    while read -r destinataire; do
        while read -r input; do
            echo "$destinataire $input"
        done
    done
    } | $current_dir/chat $utilisateur # Nous n'utilisons pas 'exec' ici car ceci remplacerait le processus lancÃ© par ce script par le programme chat

}

main "$@"